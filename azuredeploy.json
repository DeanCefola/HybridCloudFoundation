      },
      "domain_2_config_bdc": {
        "Link": "[concat(parameters('_artifactsLocation'), '/nestedtemplates/domain/domain_2_config_bdc.json', parameters('_artifactsLocationSasToken'))]"
      },
      "shared_DFS_build": {
