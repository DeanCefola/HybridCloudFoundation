{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "Auto-generated token to access _artifactsLocation"
      }
    },
    "Client_Prefix": {
      "type": "string",
      "defaultValue": "",
      "maxLength": 10,
      "minLength": 3,
      "metadata": {
        "description": "Enter a prefix for all resources to be globally unique to your environemnt"
      }
    },
    "Admin_Password": {
      "type": "securestring"
    },
    "Admin_UserName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "standard local admin account"
      }
    },
    "Auth_authenticationType": {
      "type": "string",
      "defaultValue": "",
      "allowedValues": [
        "password",
        "sshPublicKey"
      ],
      "metadata": {
        "description": "Authentication Type to chose for the Virtual Machines"
      }
    },
    "Auth_sshPublicKey": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SSH Key for the virtual machines"
      }
    },
    "backupPolicyName": {
      "type": "string",
      "defaultValue": "DefaultPolicy",
      "allowedValues": [
        "SOX",
        "HIPPA",
        "PCI",
        "DefaultPolicy"
      ]
    },
    "DomainExtension": {
      "type": "string",
      "allowedValues": [
        ".com",
        ".net",
        ".org",
        ".edu"
      ],
      "metadata": {
        "description": "Combines Domain NetBIOS name with your selected extension i.e.  'Contoso.com'"
      }
    },
    "DomainName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "NetBios Domain Name"
      }
    },
    "Hybrid_Use_Benifit": {
      "type": "string",
      "defaultValue": "Windows_Server",
      "allowedValues": [
        "",
        "Windows_Server"
      ],
      "metadata": {
        "description": "Use Existing Windows Server Licenses with Software Assurance"
      }
    },
    "IPAddress_Space": {
      "type": "string",
      "defaultValue": "10.0",
      "metadata": {
        "description": "Enter the CIRD for this deployment (10.0.x.x leave last 2 octets blank)"
      },
      "minLength": 4,
      "maxLength": 12
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus2",
      "allowedValues": [
        "centralus",
        "eastus",
        "eastus2",
        "northcentralus",
        "southcentralus",
        "westcentralus",
        "westus",
        "westus2"
      ],
      "metadata": {
        "description": "List of allowed deployment regions in Azure"
      }
    },
    "location_DR": {
      "type": "string",
      "defaultValue": "westus2",
      "allowedValues": [
        "centralus",
        "eastus",
        "eastus2",
        "northcentralus",
        "southcentralus",
        "westcentralus",
        "westus",
        "westus2"
      ],
      "metadata": {
        "description": "List of allowed deployment regions in Azure"
      }
    },
    "SQLAdmin_Password": {
      "type": "securestring"
    },
    "SQLAdmin_UserName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "SQL Admin account"
      }
    },
    "Tags_Application": {
      "type": "string",
      "metadata": {
        "description": "Application for target resource"
      }
    },
    "Tags_CostCenter": {
      "type": "string",
      "metadata": {
        "description": "Cost Center of target resource"
      }
    },
    "Tags_Department": {
      "type": "string",
      "metadata": {
        "description": "department of target resource"
      }
    },
    "Tags_Environment": {
      "type": "string",
      "allowedValues": [
        "prd",
        "dev",
        "tst",
        "qa"
      ],
      "metadata": {
        "description": "environment of target resource"
      }
    },
    "1_Deploy_Backup_Vault": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "1_Deploy_KeyVault": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "1_Deploy_Site_Recovery": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "1_Deploy_Virtual_Network": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "2_Deploy_Storage": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "2_Deploy_NVA_Cisco": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "2_Deploy_NVA_PaloAlto": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "3_Deploy_ActiveDirectory": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "4_Deploy_DFS_Farm": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "5_Deploy_RDS_Farm": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "6_Deploy_Tempalte_WORKLOAD_placeholder": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "7_Deploy_ExpressRoute": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    },
    "7_Deploy_VPN": {
      "type": "bool",
      "allowedValues": [
        true,
        false
      ]
    }
  },
  "variables": {
    "DomainFQDN": "[concat(parameters('domainName'), parameters('DomainExtension'))]",
    "Params": "[concat(parameters('Client_Prefix'), parameters('Tags_Application'), parameters('Tags_Environment'))]",
    "ServerParams": "[concat(parameters('Client_Prefix'), parameters('Tags_Environment'))]",
    "Source": "[concat('/subscriptions/', subscription().subscriptionId , '/resourceGroups/', resourceGroup().name, '/providers/')]",
    "slash": "\\",
    "JoinUser": "[concat(parameters('DomainName'), variables('slash'), parameters('Admin_UserName'))]",
    "NVA_Storage_url": "[concat('http://', parameters('Client_Prefix') ,'nva01.blob.core.windows.net')]",
    "Monitor_Storage_url": "[concat('http://', parameters('Client_Prefix') ,'monitor01.blob.core.windows.net')]",    
    "Templates": {
      "core_backup_vault": {
